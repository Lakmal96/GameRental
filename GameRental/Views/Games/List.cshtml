@model IEnumerable<GameRental.Models.Game>
@{
    ViewBag.Title = "Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Games</h2>
@Html.ActionLink("New Game", "New", "Games", null, new { @class = "btn btn-primary"})
<table id="games" class="table table-hover table-bordered">
    <thead>
    <tr>
        <th>Game</th>
        <th>Genre</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#games").DataTable({
                ajax: {
                    url: "/api/games",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function(data, type, game) {
                            return "<a href='/games/edit/" + game.id + "'>" + game.name + "</a>";
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<button class='btn-link js-delete' game-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#games").on("click",
                ".js-delete",
                function() {
                    var button = $(this);

                    bootbox.confirm("Are you sure you want to delete this game?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/games/" + button.attr("game-id"),
                                    method: "DELETE",
                                    success: function() {
                                        table.row(button.parents("tr")).remove().draw();
                                    }
                                });
                            }
                        });


                });
        });
    </script>
}

